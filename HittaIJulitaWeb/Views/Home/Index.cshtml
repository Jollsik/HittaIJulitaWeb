@model HittaIJulitaWeb.ViewModels.SearchViewModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Välkommen</h1>
    <p>Detta är en tjänst som hjälper dig att hitta i Julita</p>
</div>

<div class="card">
    <form method="post" asp-action="Search">
        <div class="form-group">
            <input type="text" asp-for="GatuPlats" class="form-control" maxlength="50">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Postnummer" class="form-control" maxlength="50">
        </div>
        <div class="form-group">
            <input type="text" asp-for="Plats" class="form-control" maxlength="50">
        </div>
        <button class="btn btn-danger" type="submit"></button>
    </form>
</div>